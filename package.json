{
  "name": "laundry-application",
  "version": "1.0.0",
  "description": "Laundry Management App",
  "main": "server/app.js",
  "dependencies": {
    "axios": "^0.19.2",
    "bcrypt": "^5.0.0",
    "concurrently": "^4.1.2",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-graphql": "^0.9.0",
    "graphql": "^14.6.0",
    "graphql-iso-date": "^3.6.1",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^3.5.8",
    "mongoose": "^5.9.4",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.2",
    "nodemon": "^1.19.4"
  },
  "scripts": {
    "heroku-postbuild": "node server/app.js && cd client && npm install --only=dev && npm install && npm run build",
    "client-install": "cd ./client && npm install",
    "start": "cross-env NODE_ENV=production node server/app.js",
    "client-build": "cd ./client && npm install && react-scripts build",
    "server-build": "cd ./server && npm install",
    "server": "nodemon app.js",
    "debugServer": "nodemon --inspect app.js",
    "client": "npm start --prefix ./client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "debug": "concurrently \"npm run debugServer\" \"npm run client\"",
    "deploy": "npm run server-build cross-env NODE_ENV=production forever start --minUptime 2000 --spinSleepTime 5 server/app.js"
  },
  "author": "James Oshomah",
  "engines": {
    "node": "12.16.1"
  }
}
